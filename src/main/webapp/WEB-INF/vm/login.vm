<script type="text/javascript">
	$(function() {
		$('input[placeholder]').each(function(){$(this).is('input')?$(this).iePlaceholder():$(this).iePlaceholder({onInput: false});});
		$('#username').bind({
			blur : function() {
				if (this.value == "") {
					$('#error-message').text('用户名不能为空').show();
				}
			},
			keydown : function() {
				$('#error-message').hide();
				$('#password').val("");
			}
		});

		$('#password').bind({
			blur : function() {
				if (this.value == "") {
					$('#error-message').text('密码不能为空').show();
				}
			},
			keydown : function() {
				$('#error-message').hide();
			}
		});

		$("#username").keydown(function(e) {
			if (e && e.keyCode == 13) {
				$("#password").focus();
			}
			e.stopPropagation();
		});

		$("#password").keydown(function(e) {
			if (e && e.keyCode == 13) {
				login();
			}
			e.stopPropagation();
		});
	});

	function login() {
		var flag = false;
		var username = $("#username");
		if (username.val() == null || username.val().trim() == "") {
			$('#error-message').text('用户名不能为空').show();
			flag = true;
		}
		var password = $("#password");
		if (password.val() == null || password.val().trim() == "") {
			$('#error-message').text('密码不能为空').show();
			flag = true;
		}
		if (flag) {
			return;
		} else {
			$.ajax({
				type : "POST",
				url : std.u('/doLogin.htm'),
				data : $("#loginForm").serialize(),
				dataType : "json",
				cache : false,
				async : false,
				success : function(result) {
					if (result.type == "error") {
						$('#error-message').text(result.message).show();
					} else {
						if("安徽师范大学客户用户登录成功"==result.message) {
							showSecuritycodeBox();
						} else {
							document.location = std.u('/index.htm');
						}
					}
				}
			});
		}
	}
</script>
